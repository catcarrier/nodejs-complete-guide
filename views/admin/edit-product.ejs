<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if(errorMessage) { %>
                    <div class="user-message user-message-error">
                        <%= errorMessage %>
                    </div>
                <% } %>
                <form class="product-form" action="/admin/<% if(editing){ %>edit-product<% } else { %>add-product<% } %>" method="POST" enctype="multipart/form-data">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input 
                            type="text" 
                            name="title" 
                            id="title" 
                            class="<%= errors.find(e => e.param==='title') ? 'invalid' : '' %>" 
                            value="<%= product.title %>">
                    </div>
                    <!-- <div class="form-control">
                        <label for="imageUrl">Image URL</label>
                        <input 
                            type="text" 
                            name="imageUrl" 
                            id="imageUrl" 
                            class="<%= errors.find(e => e.param==='imageUrl') ? 'invalid' : '' %>" 
                            value="<%= product.imageUrl %>">
                    </div> -->
                    <div class="form-control">
                            <label for="image">Image</label>
                            <input 
                                class="<%= errors.find(e => e.param==='image') ? 'invalid' : '' %>" 
                                type="file" 
                                name="image" 
                                id="image">
                        </div>
                    <div class="form-control">
                        <label for="price">Price</label>
                        <input 
                            type="number" 
                            name="price" 
                            id="price" 
                            step="0.01" 
                            class="<%= errors.find(e => e.param==='price') ? 'invalid' : '' %>"
                            value="<%= product.price %>">
                    </div>
                    <div class="form-control">
                        <label for="description">Description</label>
                        <textarea 
                            name="description" 
                            class="<%= errors.find(e => e.param==='description') ? 'invalid' : '' %>" 
                            id="description" rows="5"><%=  product.description %></textarea>
                    </div>

                    <% if(editing) { %>
                        <input type="hidden" name="productId" value="<%= product._id %>">
                    <% } %>

                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn" type="submit">
                        <% if(editing) { %>
                            Update Product
                        <% } else { %>
                            Add Product
                        <% } %>
                    </button>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>